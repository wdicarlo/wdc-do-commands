#!/bin/bash


isglobal=0
if [ $# == 1 ]; then
    if [ "$1" == "-g" ]; then
        isglobal=1
    fi
fi


if [ -z "$PROJECT" ] || [ "$isglobal" == "1" ]
then
    dest=`echo ~`
else
    dest=`echo ~/projects/$PROJECT`
fi


if [ ! -d "$dest" ]
then
    echo "Missing folder $dest"
    exit
fi

vi $dest/notes.otl

#!/bin/bash



# if [ ! $# == 3 ] && [ ! $# == 4 ]; then
#     cmd=`basename $0`
#     echo "Usage: $cmd [-p] <root> <depth> <string>"
#     echo "where:"
#     echo "       -p just print the paths"
#     exit
# fi

cmd=`basename $0`

function usage() {
    echo "Usage: $cmd [-i] [-p] [-r <root>] [-n <depth>] [-f <file-pattern>] <string>"
    echo "where:"
    echo "       -i                 : ignore case"
    echo "       -p                 : just print the paths"
    echo "       -r <root>          : start from root folder"
    echo "       -n <depth>         : max depth to search into"
    echo "       -f <file-pattern>  : filename pattern to use"
    exit
}

if [ $# == 0 ]; then
    usage
    exit
fi

pars="-Hn"
root="."
file="*"
depth=99

while getopts ipr:n:f: flag
do
    case $flag in

        i)
            pars+="i"
#            echo pars is $pars
            ;;
        p)
            pars="-l"
#            echo pars is $pars
            ;;
        f)
            file=$OPTARG
#            echo file-pattern is $file
            ;;
        r)
            root=$OPTARG
#            echo root is $root
            ;;
        n)
            depth=$OPTARG
#            echo depth is $depth
            ;;
        ?)
            usage
            exit
            ;;
    esac
done
shift $(( OPTIND - 1 ))  # shift to the last flag or argument

string=$1
#echo string is $string

# postproc='xargs -I@ dirname @ | sort | uniq'
cmd="find \"$root\" -maxdepth \"$depth\" -type f -name \"$file\"| xargs -I@ grep \"$pars\" \"$string\" @"
#find "$root" -maxdepth "$depth" -type f -name "$file"| xargs -I@ grep "$pars" "$string" @
echo "> $cmd"
eval $cmd

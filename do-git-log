#!/usr/bin/env bash

function usage() {
	echo "Usage: $cmd [-q] [-r] [-b <branch>]"
	echo "             -b <branch>            : show log of the branch"
	echo "             -a <author>            : show log of the author"
	echo "             -r                     : raw"
	echo "             -q                     : quiet"
}

quiet=0
raw=0
branch="--all"
author=""
if [ ! -t 1 ]; then
    quiet=1
    raw=1
fi
while getopts hqrb:a: flag
do
    case $flag in
        r)
            raw=1
            ;;
        q)
            quiet=1
            ;;
        a)
            author="--author=$OPTARG"
            ;;
        b)
            branch=$OPTARG
            ;;
        h)
            usage
            exit
            ;;
        ?)
            usage
            exit
            ;;
    esac
done
shift $(( OPTIND - 1 ))  # shift to the last flag or argument

if [ $quiet -eq 0 ]; then
    echo "> git log $author --graph $branch --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white) %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative $@"
fi
if [ $raw -eq 0 ]; then
    git log $author --graph $branch --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white) %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative $@
else
    git log $author --graph $branch --abbrev-commit --date=relative --format=format:'%h - (%ar) %s %d'
fi

#!/bin/bash

cmd=`basename $0`

function usage() {
    echo "Usage: $cmd <command-to-execute-with-admin-privileges>"
}

if [ $# == 0 ]; then
    usage
    exit
fi

cmd=""
if [  `which sudo` ]; then
    cmd="sudo"
elif [ `which su-to-root` ]; then
    cmd="su-to-root"
else
    echo "Missing super hero command"
    exit
fi

cmd="$cmd sh -c \"$@\""
echo "> $cmd"
eval $cmd

#!/usr/bin/env bash


cpath=`pwd`
bookmarks=~/.bookmarks
 # check if the bookmark is not already present
n=`cat $bookmarks | grep -E "^$cpath$" | wc -l`

if [ $n == 0 ]; then
    echo "$cpath" >> $bookmarks
fi
# modify bookmark file
file=`cat $bookmarks`;echo  "$file" | sort > $bookmarks

if [ "$PROJECT" == "" ]; then
    cat $bookmarks
else
    cat $bookmarks | grep "$PROJECT_PATH/" | sed "s#$PROJECT_PATH/##"
fi
